<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <!-- Tutorial "unit" -->
    <persistence-unit name="Tutorial">
        <class>org.reparationservice.datanucleus.entities.customer.CustomerImpl</class>
        <exclude-unlisted-classes/>
        <properties>
            <!-- ENABLE THESE FOR MONGODB -->
            <property name="javax.jdo.option.ConnectionURL" value="mongodb:/reparationService"/>
            <property name="javax.jdo.option.Mapping" value="mongodb"/>

            <property name="datanucleus.schema.autoCreateAll" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
